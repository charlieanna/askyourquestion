<div class="container">
  <%= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post ,:class => 'form-signin', 'role' => 'form'} do |f| %>
  <h2 class="form-signin-heading">Forgot your password?</h2>
  <%= f.email_field :email,placeholder:"Email address", :autofocus => true,class:"form-control",required: true %>
  <br>
  <%= f.submit "Reset password",class:"btn btn-lg btn-primary btn-block" %>
  <br>
   <%= render "devise/shared/links" %>
  <% end %> 
</div>