
<div style="margin-bottom:2%" data-role="nav-links">
  <% if admin_signed_in? %>
    Logged in as <strong><%= current_admin.email %></strong>.
    <%= link_to 'Edit profile', edit_admin_registration_path %> |
    <%= link_to "Logout", destroy_admin_session_path, method: :delete %>
  <% elsif current_user.guest?%>
    Signed in as <%= current_user.username %>
    <div class="btn-group">
      <%= link_to "Create an event",new_event_path,class:"btn btn-block btn-danger" %>
      <%= link_to "Join an event", new_subscriber_path ,class:"btn btn-block btn-danger" %>
    </div>
     <!-- new_admin_registration_path -->
     <div class="btn-group">
      <%= link_to "Sign up to create an event", new_admin_registration_path ,class:"btn btn-block btn-primary" %>
      <%= link_to "Admin Login", new_admin_session_path ,class:"btn btn-block btn-primary" %>
    </div>
    
    <div class="btn-group">
      <%= link_to(image_tag("facebook.png"), "/auth/facebook")%>
      <%= link_to(image_tag("twitter.png"), "/auth/twitter")%>
    </div>
  <% else %>
    Signed in as <%= current_user.username %>
    <%= link_to "Join an event", new_subscriber_path ,class:"btn btn-primary" %>
    <%= link_to "Sign out", logout_path,method: :delete,class:"btn btn-block btn-danger" %> 
  <% end %>
</div>





    