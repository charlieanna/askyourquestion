<div class="container">
  <%= form_for resource, :as => resource_name, :url => admin_session_path, :html => {:class => 'form-signin', 'role' => 'form'} do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= f.email_field :email,placeholder:"Email address", :autofocus => true,class:"form-control",required: true %>
  <%= f.password_field :password,placeholder:"Password", class:"form-control",required: true %>
  <% if devise_mapping.rememberable? -%>
  <label class="checkbox">
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  </label>
  <% end -%>
 
  <%= f.submit "Sign in",class:"btn btn-lg btn-primary btn-block" %>
   <%= render "devise/shared/links" %>
  <% end %> 
 
</div>



