<li>
  <%= div_for question do %>
<div class="well well-lg" style="margin-top:3%">
  <div class="row question">
    <% if admin_signed_in?%>
    <div class='col-md-1 vote_button'>
      <%= approve_button question %>
      <%= disapprove_button question %>
    </div>
    <% else %>
    <div class='col-md-1 vote_button'>
      <%= vote_button question %>
    </div>
    <% end %>
    <div class='col-md-3 body'>
      <%= question.body %>
    </div>
    <div class='col-md-4 votes'>
    
      <%= image_tag("vote.png", :size => "50x50", :alt => "Edit Entry") %>
      <%= pluralize(question.votes.up.count, 'vote') %>
      
    </div>
  </div>
  
</div>
<% end %>
</li>
